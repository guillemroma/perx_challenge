<div class="row">
  <div class="col-4"></div>
  <div class="col-4 mt-5">
    <h2><strong>Create </strong>new User</h2>

    <%= simple_form_for(@client, url: users_path) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" }%>
        <%= f.input :country, required: true, autofocus: true do %>
          <br><%= f.select(:country, User::COUNTRIES.map{ |country| country }, {},{ class: 'form-control custom-drop-icon'})%>
        <% end %>
        <%= f.input :birthday,
                    as: :date,
                    required: true,
                    autofocus: true,
                    html5: true,
                    input_html: { autocomplete: "birthday" }%>
        <%= f.input :user_type, as: :hidden, input_html: { value: "client" } %>
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "password" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Submit", class: "btn btn-dark"  %>
      </div>
    <% end %>
  </div>
</div>
